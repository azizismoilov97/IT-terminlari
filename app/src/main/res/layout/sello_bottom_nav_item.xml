<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:layout_height="wrap_content"
    tools:layout_width="wrap_content"
    tools:parentTag="android.widget.FrameLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_menu_item"
        android:layout_width="80dp"
        android:layout_height="77dp"
        android:layout_gravity="center"
        android:duplicateParentState="true"
        android:gravity="start"
        android:orientation="vertical">

        <View
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/menulinebac"
            android:id="@+id/menuLine"
            android:layout_width="wrap_content"
            android:layout_height="4dp"/>

        <View
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/bac"
            android:background="@drawable/menuitembac"
            app:layout_constraintTop_toBottomOf="@id/menuLine"
            android:layout_width="wrap_content"
            android:layout_height="46dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            app:layout_constraintTop_toBottomOf="@id/menuLine"
            android:id="@+id/menuIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/menuName"
            android:layout_gravity="center_horizontal"
            android:duplicateParentState="true"
            tools:src="@android:drawable/btn_star_big_off" />

        <TextView
            app:layout_constraintTop_toBottomOf="@id/menuIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/menuName"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:duplicateParentState="true"
            android:singleLine="true"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:visibility="gone"
            tools:text="Discover"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>
